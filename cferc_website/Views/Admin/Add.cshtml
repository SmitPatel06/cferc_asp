@model cferc_website.Repository.adminViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section headSection{

}

@section scripts{

}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add New User Account</legend>
        <div class="editor-label">
            @Html.Label("New User Name: ")
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.userName)
            @Html.ValidationMessageFor(m => m.userName, "", new {@class="errorMessage"})
        </div>
        <div class="editor-label">
           @Html.Label("New User Role: ")
        </div>
        <div>
           @Html.DropDownListFor(m => m.selectedRoleID, Model.roleItems)
           @Html.ValidationMessageFor(m => m.selectedRoleID, "", new {@class="errorMessage"})
        </div>
        <div>
            @Html.Label("New Password: ")
        </div>
        <div>
            @Html.PasswordFor(m=> m.userPasswordFirst)
            @Html.ValidationMessageFor(m=> m.userPasswordFirst, "", new {@class="errorMessage"})
        </div>
        <div>
            @Html.Label("Confirm New Password: ")
            
        </div>
        <div>
            @Html.PasswordFor(m=> m.userPasswordSecond)
            @Html.ValidationMessageFor(m => m.userPasswordSecond, "", new {@class="errorMessage"})
        </div>
        <div>
            <input type="submit" name="Submit" />
        </div>
    </fieldset>
    
    
}
